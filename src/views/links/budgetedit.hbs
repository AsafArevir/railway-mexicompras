<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/budgetedit/{{edit.id}}" method="POST">
                        <div class="form-group">
                            Date of Start
                            <input type="date" name="fechai" class="form-control" placeholder="Date of Start" value="{{edit.fechai}}" autofocus>
                        </div>
                        <div class="form-group">
                            Date of End
                            <input type="date" name="fechaf" class="form-control" placeholder="Date of End" value="{{edit.fechaf}}">
                        </div>
                        <div class="form-group">
                            Enter the New Budget
                            <input type="text" name="pinit" class="form-control" placeholder="Total Budget" value="{{edit.pinit}}">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">
                                Save
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>