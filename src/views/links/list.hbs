<div class="container p-4">
    <div class="row">
        {{#each links}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <a target="_blank">
                        <h3 class="card-title text-uppercase">
                            {{nameps}}
                        </h3>
                    </a>
                    <p class="text-muted">
                        {{timeago fecha}}
                    </p>
                    <p class="m-2">{{description}}</p>
                    <p class="text-muted">Price: {{precio}} Amount: {{cantidad}} Total: {{total}}</p>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>There are not Prducts saved yet.</p>
                <a href="/links/add">Add One!</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>