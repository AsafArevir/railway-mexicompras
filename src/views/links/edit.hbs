<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/links/edit/{{link.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="category" class="form-control" placeholder="Category" value="{{link.category}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="nameps" class="form-control" placeholder="Name" value="{{link.nameps}}">
                </div>
                <div class="form-group">
                    <input type="text" name="precio" class="form-control" placeholder="Price" value="{{link.precio}}">
                </div>
                <div class="form-group">
                    <input type="text" name="cantidad" class="form-control" placeholder="Amount" value="{{link.cantidad}}">
                </div>
                <div class="form-group">
                    <textarea name="description" rows="2" class="form-control" placeholder="Description">{{link.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>